<html>

{% block head %}
<head>

        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}"/>


        {% block stylesheets %}
            <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" />
        {% endblock %}

        <title>{% block title %}Adon Melech{% endblock %}</title>

    {% endblock %}
</head>

<body>
{% block body %}
    {% set currentPath = path(app.request.attributes.get('_route')) %}
    <div class="container">
        <div class="header">
            <ul class="nav nav-pills pull-right" role="tablist">
                <li role="presentation" {% if currentPath == '/' %}class="active"{% endif %}><a href="/">Home</a></li>
                <li role="presentation">
                    <form name="login" action="/login" method="post">
                        <input type="text" name="username" placeholder="username" style="max-width:100px"></text>
                        <input type="text" name="password" placeholder="password" style="max-width:100px"></text>
                        <input type="submit" style="width:0px; height:0px; opacity:0;"/>
                    </form>

                </li>

            </ul>
            <h3 class="text-muted">Adon Melech</h3>
        </div>

        <div class="block">
            {% block content %}
                <div class="jumbotron">
                    <div class="text-center">
                        <h3>Welcome {{ user_name }}!</h3>
                    </div>
                </div>
            {% endblock %}


        <div class="footer">
            {% block footer %}
                <p>&copy; Wilderness 2015</p>
            {% endblock %}
        </div>

    </div> <!-- /container -->

{% endblock %}
        {% block javascripts %}

            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>

        {% endblock %}

</body>

</html>